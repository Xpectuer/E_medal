<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/deviceNameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设备名称"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/deviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/deviceNameTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/deviceAddressTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MAC 地址"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/deviceName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/deviceAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/deviceAddressTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/deviceRssiTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="信号强度 (RSSI)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/deviceAddress"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/deviceRssi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/deviceRssiTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/advertisementDataTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="广播数据"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/deviceRssi"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/advertisementData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="4dp"
        android:fontFamily="monospace"
        app:layout_constraintTop_toBottomOf="@id/advertisementDataTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/connectableTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="连接状态"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/advertisementData"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/connectable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/connectableTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/connectButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="连接设备"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/connectable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>